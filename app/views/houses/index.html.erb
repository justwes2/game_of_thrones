<h1> Houses of the Realm </h1>

<%= link_to 'New House', new_house_path %>
<table>
  <tr>
    <th>Name</th>
    <th>Words</th>
    <th>Sigil</th>
    <th>territory</th>
  </tr>

  <% @houses.each do |house| %>
  <tr>
    <td><%= house.name %> </td>
    <td><%= house.words %> </td>
    <td><img src="<%= house.sigil_url %>"/></td>
    <td><%= house.territory %> </td>
    <td><%= link_to 'Show', house_path(house) %> </td>
    <td><%= link_to 'Edit', edit_house_path(house) %> </td>
    <td><%= link_to 'Red Wedding', house_path(house), method: :delete, data: {confirm: 'Do the Lannisters send their regards?'} %> </td>
  </tr>
  <% end %>
</table>
